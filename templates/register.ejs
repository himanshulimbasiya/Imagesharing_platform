<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
        </li>
    </ul>
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="/register">Register</a>
        </li>
    </ul>
</nav>

<div class="container" id="register">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="card">
            <div class="card-header bg-info text-white" style="text-align: center">Sign Up</div>
            <div style="padding-top:30px" class="card-body" >
                <form class="form-horizontal" method="post" action="/registered" >
                    <div id="input" style="margin-bottom: 25px" class="input-group">
                        <input id="inputbox" type="text" class="form-control" name="fname" value="" placeholder="Firstname" >
                    </div>
                    <div id="input" class="input-group">
                        <input id="inputbox" type="text" class="form-control" name="lname" value="" placeholder="Lastname" >
                    </div>
                    <div id="input" class="input-group">
                        <input id="inputbox" type="email" class="form-control" name="mail" value="" placeholder="Email" >
                    </div>
                    <div id="input" class="input-group">
                        <input id="inputbox" type="text" class="form-control" name="username" value="" placeholder="Username" >
                    </div>
                    <div id="input" class="input-group">
                        <input id="inputbox" type="password" class="form-control" id="password_check" name="password" placeholder="Password" >
                    </div>
                    <div id="input" class="input-group">
                        <input id="inputbox" type="password" class="form-control" id="repeat_password" placeholder="Repeat Password" >
                    </div>
                    <div class="col-sm-12 controls">
                        <input type="submit" class="btn btn-success bg-info" style="border-radius: .5rem;" value="Sign Up" onclick="">
                    </div>
                    <label></label>
                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                Already have an account!
                                <a href="/login">Log In Here</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    var pass = document.getElementById("password_check");
    var password_check = document.getElementById("repeat_password");
    function validatePassword(){
        if(pass.value != password_check.value)
        {
            password_check.setCustomValidity("Passwords Don't Match");
        }
        else
        {
            password_check.setCustomValidity('');
        }
    }
    pass.onchange = validatePassword;
    password_check.onkeyup = validatePassword;
</script>
</body>
</html>